{
    "manifest_version": 3,
    "name": "Limitless",
    "version": "1.0",
    "description": "Boost your productivity with Oppenheimer-inspired techniques",
    "permissions": ["notifications", "storage", "declarativeNetRequest", "declarativeNetRequestFeedback"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "declarativeNetRequest": {
      "rule_resources": [{
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }]
    }
  }
  